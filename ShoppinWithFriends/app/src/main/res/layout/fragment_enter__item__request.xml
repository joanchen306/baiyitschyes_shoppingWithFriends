<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.catherinemorris.shoppinwithfriends.Enter_Item_Request$PlaceholderFragment"
    android:onClick="goToItemRequest">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItemNameField"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:hint="item" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxPriceField"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/minPriceField"
        android:hint="Max Price" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minPriceField"
        android:layout_marginTop="35dp"
        android:inputType="number"
        android:layout_below="@+id/maxPriceField"
        android:layout_centerHorizontal="true"
        android:hint="Min Price" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/itemDescriptionField"
        android:layout_below="@+id/ItemNameField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:hint="Item Description" />

    <Button
        android:id="@+id/requestItem"

        android:text="Request Item"
        android:textColor="#FFFFFF"
        android:textSize="17dp"

        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="3"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/minPriceField"
        android:layout_alignStart="@+id/minPriceField"
        android:layout_marginTop="52dp" />
</RelativeLayout>
