<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.catherinemorris.shoppinwithfriends.Enter_Item_Request$PlaceholderFragment"
    android:background="#007f8f">

    <TextView android:text="What are you" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textSize="33dp"
        android:layout_below="@+id/button8"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemNameField"
        android:hint="Item"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="38dp"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priceField"
        android:inputType="number|numberDecimal"
        android:hint="Price"
        android:layout_below="@+id/itemNameField"
        android:layout_alignStart="@+id/itemNameField"
        android:layout_marginTop="40dp"
        android:layout_alignEnd="@+id/itemNameField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/itemDescriptionField"
        android:hint="Item Description"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/requestItem"

        android:text="Request Item"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:onClick="sendItemRequest"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp" />

    <Button
        android:id="@+id/button8"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:onClick="back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="looking for?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="33dp"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
