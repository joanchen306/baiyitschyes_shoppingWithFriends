<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.catherinemorris.shoppinwithfriends.FriendList"
    android:background="#00ffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Friends"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendList"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:choiceMode="singleChoice"
        android:layout_above="@+id/addFriends"
        android:clickable="true"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/back"

        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="17dp"

        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="3"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:onClick="goHomeScreen"
        android:layout_above="@+id/friendList"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/addFriend"

        android:text="Add Friend"
        android:textColor="#FFFFFF"
        android:textSize="17dp"

        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="3"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/scrollView"
        android:onClick="addFriends" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userText"
        android:hint="Enter Username"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/addFriend" />

    <Button
        android:id="@+id/deleteFriend"

        android:text="Delete Friend"
        android:textColor="#FFFFFF"
        android:textSize="17dp"

        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="3"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:onClick="deleteFriends"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/friendList" />
</RelativeLayout>
