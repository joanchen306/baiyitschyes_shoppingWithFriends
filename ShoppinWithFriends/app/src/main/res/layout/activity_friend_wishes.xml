<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".FriendWishes"
    android:background="#00ffff">


    <TextView android:text="What My Friends Want!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textSize="33dp"
        android:layout_below="@+id/button5"
        android:layout_marginTop="43dp" />

    <Button
        android:id="@+id/FriendsList"

        android:text="Friends List"
        android:textColor="#FFFFFF"
        android:textSize="17dp"

        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:onClick="openFriends"
        android:layout_above="@+id/text"
        android:layout_alignParentStart="true" />

    <Button

        android:text="Options"
        android:textColor="#FFFFFF"
        android:textSize="17dp"

        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:id="@+id/button5"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="sendSettings" />

    <Button
        android:id="@+id/mylist"

        android:text="My List"
        android:textColor="#FFFFFF"
        android:textSize="17dp"

        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="goToMyWish" />

    <Button
        android:id="@+id/button6"
        android:text="Sales"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:onClick="goToSalesList"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
