<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom=  "@dimen/activity_vertical_margin"
    tools:context=".Welcome"
    android:background="#007f8f">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:hint="Password"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PassField"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="149dp" />

    <TextView
        style="Times New Roman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/Theme.Black"
        android:text="Welcome back to Shopping with Friends!"
        android:id="@+id/textView"
        android:layout_marginTop="49dp"
        android:textSize="24dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/back"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/back"

        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="17dp"

        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:onClick="sendMessageBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/login"

        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="17dp"

        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:onClick="sendMessageLogin"
        android:layout_alignTop="@+id/PassField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:hint="Username"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/UserField"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/PassField" />

</RelativeLayout>
