<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.catherinemorris.shoppinwithfriends.SaleItem"
    android:background="#00ffff">

    <TextView android:text="What did you find?" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textSize="33dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemNameField"
        android:hint="Item"
        android:layout_above="@+id/priceField"
        android:layout_alignEnd="@+id/itemDescriptionField"
        android:layout_marginBottom="33dp"
        android:layout_alignStart="@+id/priceField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priceField"
        android:inputType="number|numberDecimal"
        android:hint="Price"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/goHomeButton"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:onClick="goHome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
    />

    <Button
        android:text="Find on Map"
        android:id="@+id/mapButton"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:onClick="goToMap"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/priceField"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
